generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String?
  createdAt DateTime @default(now())

  // Named relation for listings owned by the user
  listings  Listing[] @relation("UserListings")

  // Named relation for loans borrowed by the user
  loans     Loan[]    @relation("UserLoans")
}

model Listing {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  ownerId     Int

  // Connects to User.listings via the "UserListings" relation
  owner       User     @relation("UserListings", fields: [ownerId], references: [id])
  createdAt   DateTime @default(now())

  // This is the missing field that caused your error
  loans       Loan[]
}

model Loan {
  id         Int      @id @default(autoincrement())
  listingId  Int
  borrowerId Int
  status     String   @default("pending")
  createdAt  DateTime @default(now())

  // This relation automatically connects to Listing.loans
  listing    Listing  @relation(fields: [listingId], references: [id])

  // Connects to User.loans via the "UserLoans" relation
  borrower   User     @relation("UserLoans", fields: [borrowerId], references: [id])
}